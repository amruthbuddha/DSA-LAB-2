#include <stdio.h>
struct Complex {
 float real;
 float imag;
};
int main() {
 struct Complex n1, n2, sum, prod;
 printf("Enter real and imaginary parts of first complex number:\n");
 scanf("%f %f", &n1.real, &n1.imag);
 printf("Enter real and imaginary parts of second complex number:\n");
 scanf("%f %f", &n2.real, &n2.imag);
 sum.real = n1.real + n2.real;
 sum.imag = n1.imag + n2.imag;
 prod.real = (n1.real * n2.real) - (n1.imag * n2.imag);
 prod.imag = (n1.real * n2.imag) + (n1.imag * n2.real);
 printf("\nNumber 1: %.1f + %.1fi", n1.real, n1.imag);
 printf("\nNumber 2: %.1f + %.1fi", n2.real, n2.imag);

 printf("\n\nSum: %.1f + %.1fi", sum.real, sum.imag);
 printf("\nProduct: %.1f + %.1fi\n", prod.real, prod.imag);
 return 0;
}
 return 0;
}
